@page "/delete-cookie"
@inject NavigationManager Navigation

<h3>Please exit and re-enter...  @HttpContext.User.Identity?.Name</h3>


@code {

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override void OnParametersSet()   
    { 
        HttpContext.Response.Cookies.Delete(Globals.CookieName + Navigation.BaseUri.Replace(":", "").Replace("/", ""));
        Navigation.NavigateTo("");
    }
}
