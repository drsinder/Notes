@using System
@using System.Collections.Generic
@using System.IO
@using System.Text
@using System.Threading.Tasks
@using Notes.Client.Comp
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.DropDowns

@inject CookieStateAgent myState
@inject NotesServer.NotesServerClient Client

@if (Files is null)
{ }
else
{  <div class="dialogs keep-center medium-input">
        <h4>Copy Note (string)</h4>
        <p>Note Subject:</p>
        <p>@Note.NoteSubject</p>

        <p>Select file name to copy to:</p>
        <SfDropDownList TItem="GNotefile" TValue="int" @bind-Value="SelectedId" Placeholder="Select a file" DataSource="Files.List" >
            <DropDownListFieldSettings Text="NoteFileName" Value="Id"></DropDownListFieldSettings>
        </SfDropDownList>

        <br /><SfSwitch @bind-Checked="WholeString"></SfSwitch> Copy Whole String<br/><br />

        <button type="button" @onclick="OnSubmit" class="btn btn-success btn-sm">Copy</button> <button type="button" @onclick="Cancel" class="btn btn-info btn-sm">Cancel</button>
    </div>
}

<style>
    .blazored-custom-modal {
        display: flex;
        flex-direction: column;
        z-index: 102;
        width: 50%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

