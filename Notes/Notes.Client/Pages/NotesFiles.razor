@page "/notesfiles"

@using Notes.Client.Comp
@using Notes.Protos
@using Syncfusion.Blazor.Grids

@inject NavigationManager Navigation
@inject Blazored.SessionStorage.ISessionStorageService sessionStorage
@inject NotesServer.NotesServerClient Client
@inject CookieStateAgent myState
<h3>NotesFiles</h3>

@if( UserData == null)
{
    <p class=""><em>Loading...</em></p>
}
else
{
    <SfGrid DataSource="@Files.List" EnableAltRow="true" AllowPaging="true" AllowSelection="true" EnableHover="true" AllowSorting="true" Toolbar="@(new List<object>() { "Print" })">
        <GridPageSettings PageSize="12" PageSizes="true"></GridPageSettings>
        <GridEvents RowSelected="DisplayIt" TValue="GNotefile"></GridEvents>
        <GridColumns>
            <GridColumn Field=@nameof(GNotefile.NoteFileTitle) HeaderText="NoteFile Title" TextAlign="TextAlign.Left" Width="150"></GridColumn>
            <GridColumn Field=@nameof(GNotefile.NoteFileName) HeaderText="NoteFile Name" TextAlign="TextAlign.Left" Width="80" IsPrimaryKey="true"></GridColumn>
            <GridColumn HeaderText="Date/Time" TextAlign="TextAlign.Left" Width="60">
                <Template Context="inner">
                    @{
                        var itemx = (inner as GNotefile);
                        itemx = itemx is not null ? itemx : new();
                        DateTime curTimex = Globals.LocalTimeBlazor(itemx.LastEdited.ToDateTime());
                    string tellx = curTimex.ToShortDateString() + " " + curTimex.ToShortTimeString();
                    <span>@tellx</span>
                 }
                </Template> 
            </GridColumn>
        </GridColumns>
    </SfGrid>
}

<style>
    /*to disable the mouse actions*/
    .e-detail-disable .e-detailrowcollapse {
        pointer-events: none;
    }

        /*if required hide the icons*/
        .e-detail-disable .e-detailrowcollapse .e-icon-grightarrow {
            visibility: hidden;
        }

    .e-grid .e-gridpager {
        font-family: cursive;
        background-color: bisque;
        border: 4px solid black;
    }

    .e-grid .e-headercelldiv {
        font-size: 15px;
        font-weight: bold;
        color: blue;
    }

    .e-grid .e-headercell {
        font-family: cursive;
        background-color: lightgray;
    }

    .e-grid .e-gridheader {
        border: 4px solid black;
    }

    .e-grid .e-altrow .e-rowcell {
        background-color: #E8EEFA;
    }
</style>
